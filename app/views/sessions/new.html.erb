<h1>Login</h1>
<div class="form-custom">
<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= text_field_tag :password, params[:password], :type => "password", class: 'form-control' %>
  </div>
  <div class="actions"><%= submit_tag "Log In", class: 'btn btn-lg btn-primary' %></div>
<% end %>
</div>